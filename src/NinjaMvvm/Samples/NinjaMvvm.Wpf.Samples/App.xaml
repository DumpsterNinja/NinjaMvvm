<Application x:Class="NinjaMvvm.Wpf.Samples.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:NinjaMvvm.Wpf.Samples"
             xmlns:vm="clr-namespace:NinjaMvvm.Wpf.Samples.ViewModels"
             xmlns:v="clr-namespace:NinjaMvvm.Wpf.Samples.Views"
             Startup="Application_Startup"
            >
    <Application.Resources>
        <DataTemplate DataType="{x:Type vm:HomeViewModel}">
            <v:HomeView/>
        </DataTemplate>

        <DataTemplate DataType="{x:Type vm:DemoViewModel}">
            <v:DemoView/>
        </DataTemplate>
    </Application.Resources>
</Application>
